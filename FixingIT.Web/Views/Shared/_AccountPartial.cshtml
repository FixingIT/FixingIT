<ul class="nav">
    @if (Request.IsAuthenticated) {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name <b class="caret"></b></a>
            <ul class="dropdown-menu">
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class="nav" })) {
                    @Html.AntiForgeryToken()
                    <li class="nav"><a href="#" role="button" id="ChangeUserThemeBtn" class="mainModalBtn" data-modal-title="Change Theme" data-modal-url="@Url.Action("ChangeUserTheme", "Home")">Change Theme</a></li>
                    <li class="nav">@Html.ActionLink("Manage account", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage account" })</li>
                    <li class="nav"><a href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
                }
            </ul>
        </li>
    } 
    else
    {
        <li class="nav"><a href="#" role="button" id="" class="mainModalBtn" data-modal-title="Chose login type" data-modal-url="@Url.Action("_LoginRegisterPartial", "Account")">Login / Register</a></li>
    }
</ul>